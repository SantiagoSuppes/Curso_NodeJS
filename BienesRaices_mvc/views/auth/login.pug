extends ../layout

block content
    h1.font-bold.text-5xl.text-center.my-10 Bienes 
        span.font-normal Raíces

    h2.text-3xl.font-bold.mb-6.text-center= pag

    div.bg-white.p-8.rounded-lg.shadow-md.w-96.mx-auto
      form(action="/auth/login" method="post" noValidate)
        div.mb-4
          label.block.text-gray-700.mb-2(for="email") Email
          input(type="email" id="email" name="email" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500")
        div.mb-4
          label.block.text-gray-700.mb-2(for="password") Contraseña
          input(type="password" id="password" name="password" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500")
        div
          button(type="submit" class="w-full bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-md transition duration-200") Ingresar
      div(class="flex justify-between mt-5 text-sm")
        a(href="/auth/olvide-password" class="text-gray-500 hover:underline text-sm") Olvidé mi contraseña
        a(href="/auth/registro" class="text-gray-500 hover:underline text-sm") Registrarse
