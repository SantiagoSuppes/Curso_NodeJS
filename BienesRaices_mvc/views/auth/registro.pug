extends ../layout

block content
  h1.font-bold.text-5xl.text-center.my-10 Bienes 
    span.font-normal Raíces

  h2.text-2xl.font-bold.mb-6.text-center= pag

  if errores 
    div.bg-red-100.border.border-red-400.text-red-700.px-4.py-3.rounded.mb-6
      ul
        each error in errores
          li= error.msg

  div.bg-white.p-8.rounded-lg.shadow-md.w-96.mx-auto
    form(action="/auth/registro" method="post" noValidate)
      input(type="hidden" name="_csrf" value=csrfToken)
      div.mb-4
        label.block.text-gray-700.mb-2(for="nombre") Nombre
        input(type="text" id="nombre" name="nombre" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" value= usuario? usuario.nombre : '')
      div.mb-4
        label.block.text-gray-700.mb-2(for="email") Email
        input(type="email" id="email" name="email" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" value= usuario? usuario.email : '')
      div.mb-4
        label.block.text-gray-700.mb-2(for="password") Contraseña
        input(type="password" id="password" name="password" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500")
      div.mb-4
        label.block.text-gray-700.mb-2(for="repetir_password") Repetir Contraseña
        input(type="password" id="repetir_password" name="repetir_password" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500")
      button(type="submit" class="w-full bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-md transition duration-200") Crear Cuenta
    div(class="flex justify-between mt-5 text-sm")
      a(href="/auth/login" class="text-gray-500 hover:underline text-sm") Ya tengo una cuenta
      a(href="/auth/olvide-password" class="text-gray-500 hover:underline text-sm") Olvidé mi contraseña